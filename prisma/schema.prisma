generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  price        Float
  quantity     Int
  category     String?
  manufacturer String?
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Image {
  id        Int      @id @default(autoincrement())
  dataUri   String
  createdAt DateTime @default(now())
}